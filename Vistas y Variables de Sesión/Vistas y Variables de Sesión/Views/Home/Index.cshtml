@{
    Layout = "_milayout";
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label for="email">Email:</label>
        @Html.TextBox("txtUsuario", "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="contrasenia">Contraseña:</label>
        @Html.Password("txtClave", "", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
</form>

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

<div class="text-center">

    <h1 class="display-4">Welcome <strong>@ViewBag.nombre</strong></h1>

    <h2>Tipo de usuario: <strong>@ViewData["TipoUsuario"]</strong></h2>
   
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

</div>
